name:                as2
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/githubuser/as2#readme
license:             BSD3
license-file:        LICENSE
author:              Kathrin Stark, Steven SchÃ¤fer, Jonas Kaiser
maintainer:          example@example.com
copyright:           2017 Author name here
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Autosubst.GenM
                     , Autosubst.GenDot
                     , Autosubst.GenCode
                     , Autosubst.Types
                     , Autosubst.Parser
                     , Autosubst.Signature
                     , Autosubst.Syntax
                     , Autosubst.Generator
                     , Autosubst.Tactics
                     , Autosubst.Names
                     , Autosubst.Coq
                     , Autosubst.UCoq
                     , Autosubst.Lean
                     , Autosubst.Agda
                     , Autosubst.Automation
  build-depends:       base >= 4.7 && < 5
                     , parsec >= 3.1.11
                     , containers >= 0.5
                     , mtl >= 2.2
                     , array >= 0.5
                     , wl-pprint >= 1.2
                     , graphviz >= 2999.18
                     , text >= 1.2
  default-language:    Haskell2010

executable as2-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , as2
                     , optparse-applicative >= 0.13.2.0
                     , wl-pprint >= 1.2
                     , directory >= 1.3.0.0
  default-language:    Haskell2010

test-suite as2-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  other-modules:       GenSpec
                     , ParseTest
  build-depends:       base
                     , as2
                     , QuickCheck >= 2.9
                     , containers >= 0.5
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

